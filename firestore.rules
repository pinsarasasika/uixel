/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model where all
 * data is siloed per user. The security model is designed to be simple, secure,
 * and performant by ensuring that a user can only ever access data that exists
 * within their own dedicated data tree.
 *
 * Data Structure: All application data is organized hierarchically under a top-level
 * 'users' collection. Each user's data, including website templates, portfolio projects,
 * contact submissions, and SEO data, is stored in separate subcollections under their
 * unique user ID document path (e.g., /users/{userId}/<subcollection>/{docId}).
 *
 * Key Security Decisions:
 * - Strict Data Isolation: A user's authentication UID must match the {userId}
 *   wildcard in the document path for any access to be granted. This prevents any
 *   user from accessing another user's data.
 * - No User Listing: The rules do not allow for listing documents in the top-level
 *   'users' collection, protecting user privacy.
 * - No Public Data: There are no publicly readable collections. All access requires
 *   user authentication.
 * - Path-Based Security: Authorization relies solely on the document path, which
 *   avoids the need for slow and costly `get()` or `exists()` calls to other documents.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for readable, secure, and maintainable rules.

    /**
     * isSignedIn
     * Checks if the user making the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * isOwner
     * @param userId The user ID from the document path.
     * Checks if the authenticated user's UID matches the document's owner ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * isExistingOwner
     * @param userId The user ID from the document path.
     * Checks for ownership and ensures the document already exists before allowing
     * an update or delete operation. This prevents modifying or deleting documents
     * that do not exist, which is a security best practice.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // Match all user-specific data under the /users/{userId} path.
    match /users/{userId} {

      /**
       * @description Secures a user's private collection of website templates.
       * @path /users/{userId}/websiteTemplates/{websiteTemplateId}
       * @allow A logged-in user (create) their own website template document.
       * @deny A logged-in user (get) another user's website template document.
       * @principle Restricts access to a user's own data tree.
       */
      match /websiteTemplates/{websiteTemplateId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Secures a user's private collection of portfolio projects.
       * @path /users/{userId}/portfolioProjects/{portfolioProjectId}
       * @allow A logged-in user (update) their own portfolio project.
       * @deny An anonymous user (list) any portfolio projects.
       * @principle Restricts access to a user's own data tree.
       */
      match /portfolioProjects/{portfolioProjectId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Secures a user's private collection of contact form submissions.
       * @path /users/{userId}/contactFormSubmissions/{contactFormSubmissionId}
       * @allow A logged-in user (delete) their own contact form submission.
       * @deny A logged-in user (create) a submission for another user.
       * @principle Restricts access to a user's own data tree.
       */
      match /contactFormSubmissions/{contactFormSubmissionId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Secures a user's private collection of SEO optimization data.
       * @path /users/{userId}/seoOptimizationData/{seoOptimizationDataId}
       * @allow A logged-in user (get) their own SEO data document.
       * @deny Any user (update) SEO data for another user.
       * @principle Restricts access to a user's own data tree.
       */
      match /seoOptimizationData/{seoOptimizationDataId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }
    }
  }
}