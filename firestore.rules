/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model for most
 * data, but also allows for public collections like the portfolio.
 *
 * Data Structure: User-specific data is organized under /users/{userId}. Public
 * data, like portfolio projects, is stored in top-level collections.
 *
 * Key Security Decisions:
 * - Data Isolation for Users: A user's authentication UID must match the {userId}
 *   wildcard in the document path for any access to their private data.
 * - Public Read for Portfolio: Anyone can read the portfolio projects to view
 *   the site's content.
 * - Admin-Only Writes for Portfolio: Only the authenticated admin user can
 *   create, update, or delete portfolio projects. This is controlled by checking
 *   the request.auth.uid against a known ADMIN_UID.
 * - Path-Based Security: Authorization relies on document paths and user UIDs,
 *   avoiding costly `get()` or `exists()` calls in rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for readable, secure, and maintainable rules.

    /**
     * isSignedIn
     * Checks if the user making the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * isOwner
     * @param userId The user ID from the document path.
     * Checks if the authenticated user's UID matches the document's owner ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
      * isAdmin
      * Checks if the authenticated user is the designated admin.
      * IMPORTANT: Replace 'KKCcOLeQVbMklwbsx7sKFs8yTP52' with your actual admin Firebase UID.
      */
    function isAdmin() {
      return isSignedIn() && request.auth.uid == 'KKCcOLeQVbMklwbsx7sKFs8yTP52';
    }


    /**
     * isExistingOwner
     * @param userId The user ID from the document path.
     * Checks for ownership and ensures the document already exists before allowing
     * an update or delete operation. This prevents modifying or deleting documents
     * that do not exist, which is a security best practice.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // Match all user-specific data under the /users/{userId} path.
    match /users/{userId} {

      /**
       * @description Secures a user's private collection of website templates.
       * @path /users/{userId}/websiteTemplates/{websiteTemplateId}
       * @allow A logged-in user (create) their own website template document.
       * @deny A logged-in user (get) another user's website template document.
       * @principle Restricts access to a user's own data tree.
       */
      match /websiteTemplates/{websiteTemplateId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Secures a user's private collection of contact form submissions.
       * @path /users/{userId}/contactFormSubmissions/{contactFormSubmissionId}
       * @allow A logged-in user (delete) their own contact form submission.
       * @deny A logged-in user (create) a submission for another user.
       * @principle Restricts access to a user's own data tree.
       */
      match /contactFormSubmissions/{contactFormSubmissionId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Secures a user's private collection of SEO optimization data.
       * @path /users/{userId}/seoOptimizationData/{seoOptimizationDataId}
       * @allow A logged-in user (get) their own SEO data document.
       * @deny Any user (update) SEO data for another user.
       * @principle Restricts access to a user's own data tree.
       */
      match /seoOptimizationData/{seoOptimizationDataId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }
    }
    
    /**
     * @description Publicly readable collection of portfolio projects.
     * Write access is restricted to administrators.
     * @path /portfolioProjects/{projectId}
     */
    match /portfolioProjects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
